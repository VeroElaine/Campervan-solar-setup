<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body>
        <% include ../partials/header.ejs %>
        <% include ../partials/tab4.ejs %>
        <h1>Community Index Page</h1>
        <ul>
            <% for(let i = 0; i < community.length; i++){ %>
                <li>
                    The
                    <a href="/community/<%=community[i].id%>">
                        <%=community[i].name%>
                    </a>
                    <%=community[i].image%>.
                    <%=community[i].description%>.

                    <form action="/community/<%=community[i].id%>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE"/>
                    </form>
                    <a href="/community/<%=community[i].id%>/edit">Edit</a>
                </li>
            <% } %>
        </ul>
        <nav>
            <a href="/community/new"> Login to create a new post. </a>
        </nav>
        

    </body>
</html>
